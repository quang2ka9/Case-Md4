<form  action="/createTransaction" method="POST" enctype="multipart/form-data" class="transaction-form" >
    <div class="form-group">
        <label for="idUser">idUser:</label>
        <input type="text" id="idUser" name="idUser" required>
        <div class="invalid-feedback">Vui lòng nhập idUser!</div>
    </div>

    <div class="form-group">
        <label for="nameWallet">Tên ví:</label>
        <input type="text" id="nameWallet" name="nameWallet" required>
        <div class="invalid-feedback">Vui lòng nhập nameWallet!</div>
    </div>

    <div class="form-group">
        <label for="moneyTrade">Số tiền giao dịch:</label>
        <input type="number" id="moneyTrade" name="moneyTrade" min="0" required>
        <div class="invalid-feedback">Vui lòng nhập số tiền hợp lệ!</div>
    </div>

    <div class="form-group">
        <label for="nameTransaction">Tên giao dịch:</label>
        <input type="text" id="nameTransaction" name="nameTransaction" required>
        <div class="invalid-feedback">Vui lòng nhập nameTransaction!</div>
    </div>

<!--    <div class="form-group">-->
